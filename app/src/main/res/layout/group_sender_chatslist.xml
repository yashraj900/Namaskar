<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="gone"
        android:id="@+id/messageN"/>
    <TextView
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Message"
        android:padding="6dp"
        android:background="@drawable/sender"
        android:textColor="#FFF"
        android:id="@+id/chatMessages"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="gone"
        android:id="@+id/imageN"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/chat_images"
        android:visibility="gone"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="gone"
        android:id="@+id/videoN"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:id="@+id/chat_videos"
        android:visibility="gone"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="gone"
        android:id="@+id/audioN"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_audios"
        android:visibility="gone"
        android:layout_width="150dp"
        android:layout_alignParentRight="true"
        android:layout_height="50dp"
        app:cardBackgroundColor="#17000000"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_audiotrack_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/music"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@id/music"
                android:layout_centerInParent="true"
                android:id="@+id/audio_name"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:visibility="gone"
        android:id="@+id/documentsN"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_documents"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#17000000"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_insert_drive_file_black_24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/document"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@id/document"
                android:layout_centerInParent="true"
                android:id="@+id/document_name"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_file_download_black_24dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/download_document"/>
            <ProgressBar
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:id="@+id/progress"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/document"
                android:text="file"
                android:layout_marginLeft="24dp"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:id="@+id/fileExtension"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>