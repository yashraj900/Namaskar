<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:elevation="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_keyboard_backspace_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:id="@+id/back"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textSize="18sp"
                        android:textColor="#80000000"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_toRightOf="@id/back"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/groupUN"/>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:layout_toLeftOf="@id/more"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"
                        android:id="@+id/editGroup"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/more"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:id="@+id/more"/>
                </RelativeLayout>


            </com.google.android.material.appbar.AppBarLayout>

            <RelativeLayout
                android:layout_below="@id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/account"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/profile"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/groupName"
                    android:text="Name"
                    android:layout_toRightOf="@id/profile"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#C9000000"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_regular"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/groupName"
                    android:layout_toRightOf="@id/profile"
                    android:background="@drawable/boundary"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000 Members"
                        android:textSize="12sp"
                        android:textColor="#25D367"
                        android:layout_centerInParent="true"
                        android:id="@+id/totalMembers"/>

                </RelativeLayout>


            </RelativeLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nv"
                android:layout_below="@id/relativeLayout"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:id="@+id/notification"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#C9000000"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/relativeLayout"
                android:layout_toRightOf="@id/notification"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_below="@id/notification"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:id="@+id/exit"/>

            <TextView
                android:id="@+id/exitGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit Group"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#FF0000"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/notification"
                android:layout_toRightOf="@id/exit"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#0D000000"
                android:layout_below="@id/exit"
                android:layout_marginTop="20dp"
                android:id="@+id/view"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:text="Description"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/description"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description"
                android:text="This is the description"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:id="@+id/groupDescription"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/view2"
                android:layout_below="@id/groupDescription"
                android:background="#0D000000"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tmiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 Members"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="30dp"
                    android:textColor="#80000000"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:id="@+id/relativeLayout3"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="30dp"
                    android:src="#25D367"
                    android:id="@+id/ili"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite Link"
                    android:layout_toRightOf="@id/ili"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/addedUserRecyclerView"
                android:layout_below="@id/relativeLayout3"
                tools:listitem="@layout/group_users"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>